@page "/resellercheck"
@attribute [Authorize(Roles = "Reseller")]
@using ApiContracts.Dtos
@inject IProductInspectionService InspectionService
@rendermode InteractiveServer
@inject NavigationManager Nav
@inject IGetProductService GetProductService

@using System.Linq
@using global::BlazorApp.Services.Interface

<link href="css/Reseller.css" rel="stylesheet" />

<h3>Pending Products</h3>

@if (_loading)
{
    <p><em>Loading pending products...</em></p>
}
else if (!string.IsNullOrEmpty(_error))
{
    <div class="alert alert-danger">@_error</div>
}
else if (_allProducts is null || _allProducts.Count() == 0)
{
    <p>No products awaiting inspection </p>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-3">
        <select @onchange="OnProductListChanged" class="form-select mb-3">
            <option value="pending">Pending</option>
            <option value="reviewing">Reviewing</option>
        </select>
        @if (_products is null || _products.Count() == 0)
        {
            <p>No pending/reviewing products awaiting for inspection</p>
        }
        else
        {
            @foreach (var p in _products!)
            {
                <div class="col">
                    <div class="product-card">
                        <div class="product-image-container">
                            <img src="@p.Image.Url" class="product-image" alt="@p.Name" />
                        </div>

                        <div class="product-card-body">
                            <h5 class="product-title">@p.Name</h5>
                            <p class="product-price">@p.Price.ToString("0.00") DKK</p>

                            <div class="product-meta">
                                <span><strong>Condition:</strong> @p.Condition</span><br />
                                <span><strong>Status:</strong> @p.ApprovalStatus</span><br />
                            </div>

                            <button class="btn btn-primary w-100 mt-2"
                                    @onclick="() => GoToDetails(p.Id)">
                                Inspect Product
                            </button>
                        </div>
                    </div>

                </div>
            }
        }
    </div>
}

@code {
    private IQueryable<ProductWithFirstImageDto>? _products;
    private IQueryable<ProductWithFirstImageDto>? _allProducts;
    private bool _loading = true;
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _loading = true;
            _error = null;
            _products = (await GetProductService.GetAllPendingAsync()).OrderBy(p => p.RegisterDate);
            _allProducts = (await GetProductService.GetAllAsync()).OrderBy(p => p.RegisterDate);
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private void GoToDetails(int id)
    {
        Nav.NavigateTo($"/reseller/product/{id}");
    }

    private async Task OnProductListChanged(ChangeEventArgs e)
    {
        var selected = e.Value?.ToString();
        switch (selected)
        {
            case "available":
                await switchToAvailableProducts();
                break;
            case "reviewing":
                await switchToReviewingProduct();
                break;
            case "all":
                await switchToAllProducts();
                break;
            case "pending":
            default:
                await switchToPendingProduct();
                break;
        }
    }

    private async Task switchToAvailableProducts()
    {
        _products = (await GetProductService.GetAllAvailableAsync()).OrderBy(p => p.RegisterDate);
    }

    private async Task switchToReviewingProduct()
    {
        _products = (await GetProductService.GetAllReviewingAsync()).OrderBy(p => p.RegisterDate);
    }

    private async Task switchToPendingProduct()
    {
        _products = (await GetProductService.GetAllPendingAsync()).OrderBy(p => p.RegisterDate);
    }

    private async Task switchToAllProducts()
    {
        _products = (await GetProductService.GetAllAsync()).OrderBy(p => p.RegisterDate);
    }
}
