@using System.Security.Claims

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorApp</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="register">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Sign up
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="weather">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
            </NavLink>
        </div>

        <AuthorizeView Roles="Customer">
            <Authorized>
                @{
                    // hide or show the cart link based on the CanSell claim
                    var canSell = context.User.HasClaim("CanSell", "true");
                    var userId = context.User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
                }
                @if (canSell)
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href=@($"customer/new-product")>
                            <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Upload New Item
                        </NavLink>
                    </div>
                }
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="purchase">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Cart
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

        <AuthorizeView Roles="Reseller">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="resellercheck">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Check Quality and Price
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>


        <div class="nav-item px-3">
            <NavLink class="nav-link" href="available-product">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Buy the product
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="customer-login">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> customer-login
            </NavLink>
        </div>

        <AuthorizeView Roles="Customer">
            <Authorized>
                @{
                    var id =
                    context.User.FindFirst(ClaimTypes.NameIdentifier)?.Value
                    ?? context.User.FindFirst("sub")?.Value; 
                }
                @if (!string.IsNullOrWhiteSpace(id))
                {
                    <div class="nav-item px-3">
                        <NavLink class="nav-link" href=@($"/customer/{id}")>
                            <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> view/edit your info
                        </NavLink>
                    </div>
                }
            </Authorized>
        </AuthorizeView>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Reseller-login">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Reseller-login
            </NavLink>
        </div>

    </nav>
</div>

